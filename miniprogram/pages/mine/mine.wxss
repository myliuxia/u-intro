/* miniprogram/pages/mine/mine.wxss */
.list-intro{
  width: 100%;
}
.list-intro .intro-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  width: 700rpx;
  background-color: #ffffff;
  border: 1rpx solid #eeeeee;
  box-shadow: 0 0 10rpx 0 #eeeeee;
  border-radius: 10rpx;
  margin: 20rpx auto;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 34rpx;
  color: #444444;
}
.list-intro .intro-item.vip{
  background: linear-gradient(to top right, #cce6ff, #d2f1f0 );
  color:#0081ff;
}

.list-intro .intro-item.disabled{
  background: linear-gradient(to top right, #cccccc, #dddddd );
  color:#444444;
}

.list-intro .intro-item .item-star{
  color: #cccccc;
}
.list-intro .intro-item .item-star .active{
  color: #ff9700;
}

.add-intro-ntn{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 700rpx;
  background-color: #cce6ff;
  color:#0081ff;
  border: 1rpx solid #cce6ff;
  box-shadow: 0 0 10rpx 0 #eeeeee;
  border-radius: 10rpx;
  margin: 20rpx auto;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 34rpx;
}
.add-intro-ntn .iconfont{
  font-size: 46rpx;
  margin: 0 20rpx;
}

/*---- 公告样式 -----*/
.notice-box{
  display: flex;
  width: 100%;
  padding: 20rpx 30rpx;
  align-items: center;
  background-color: #ffffff;
  box-shadow:0 0 10rpx 0 #eeeeee;
  margin: 30rpx auto;
  box-sizing: border-box;
}
.notice-box .notice-left{
  font-size: 38rpx;
  color: #ff9700;
  font-weight: bold;
  margin-right: 20rpx;
}
.notice-box .notice-right{
  flex: 1;
  height: 80rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #444444;
}
.notice-right .notice-list{
  transition:  all .6s;
  transform: translateX(0);
}
.notice-right .notice-list .notice-item{
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}


/*---- 招聘信息样式 -----*/
.stop-scroll{
  position: relative;
}

.stop-scroll .stop-bg{
  background-color: transparent;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100;
}

.recruit-list{
  height: 430rpx;
  background-color: transparent;
  overflow: hidden;
  position: relative;
}

.recruit-box{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50%;
  width: 100%;
  position: absolute;
}
.recruit-item{
  width:700rpx;
  background-color:#ffffff;
  border:1rpx solid #eeeeee;
  box-shadow:0 0 10rpx 0 #eeeeee;
  border-radius:10rpx;
  box-sizing:border-box;
  padding:20rpx;
  font-size:34rpx;
  color:#444444;

}
.recruit-item .row{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  line-height: 1.5;
}
.recruit-item .row.gray{
  color: #888888;
}
.recruit-item .row .big-size{
  font-size: 30rpx;
}

.recruit-item .title-box{
  display: flex;
  flex: 1;
  height: 80rpx;
  align-items: center;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recruit-item .title-box .title-name{
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-overflow: -o-ellipsis-lastline;
}
.recruit-item .title-box .logo{
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  margin-right: 10rpx;
}


/*---- 帖子列表 ----*/

.post-item{
  width: 100%;
  margin: 20rpx auto;
  padding: 0 30rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}
.post-user{
  display: flex;
  align-items: center;
  height: 110rpx;
  width: 100%;
  color: #30457a;
  font-size: 22rpx;
}
.post-user .post-logo{
  width: 55rpx;
  height: 55rpx;
  border-radius: 55rpx;
  overflow: hidden;
  margin-right: 15rpx;
}
.post-content{
  font-size: 28rpx;
  color: #222222;
}
.post-content .content-text{
  max-height: 80rpx;
  line-height: 40rpx;
  overflow:hidden;
  text-overflow:-o-ellipsis-lastline;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  line-clamp:2;
  -webkit-box-orient:vertical;
}
.post-content .content-image{
  margin-top: 20rpx;
  padding: 10rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.post-content .content-image image{
  width: 215rpx;
  height: 155rpx;
}

.post-count{
  display: flex;
  align-items: center;
  height: 90rpx;
}
.post-count .count-item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color: #818181;
}
.post-count .count-item .iconfont{
  margin-right: 5rpx;
  font-size: 34rpx;
}


