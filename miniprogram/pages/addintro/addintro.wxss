/* miniprogram/pages/addintro/addintro.wxss */
.container{
  display: flex;
  flex-direction:column;
}
.field{
  width:95%;
  display: flex;
  flex-direction:row;
  align-items:center;
  flex-wrap:nowrap;
  justify-content:space-between;
  margin: 10rpx 0rpx 10rpx rpx;
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  border-bottom:2rpx solid #e3e3e3;
}
.field .grow{
  flex-grow:2;
}
.field .chooseimage{
  font-size: 28rpx;
  color:#888;
}
.field .placeholder{
  width: 30%;
  font-size: 28rpx;
  color:#444;
}
.headimage_container{
  height: 100rpx;
  width:100rpx;
  overflow: hidden;
}
.headimage_container image{
  height: 100rpx;
  width:100rpx;
  border-radius: 50%;
}
.picker{
  font-size: 28rpx;
  color: #333;
}